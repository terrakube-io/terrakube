{
    "configurations": [
        {
            "type": "java",
            "name": "Run API",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "io.terrakube.api.ServerApplication",
            "projectName": "api-server",
            "args": "-Xmx512m -Xms256m -Dcom.sun.net.ssl.checkRevocation=false",
            "vmArgs": "-Dcom.sun.management.jmxremote.port=45556 -Dcom.sun.management.jmxremote.rmi.port=45556 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false",
            "envFile": "${workspaceFolder}/.envApi",
            "preLaunchTask": "setup-java"
        },
        {
            "type": "java",
            "name": "Run Registry",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "io.terrakube.registry.OpenRegistryApplication",
            "projectName": "open-registry",
            "args": "-Xmx512m -Xms256m",
            "vmArgs": "-Dcom.sun.management.jmxremote.port=45558 -Dcom.sun.management.jmxremote.rmi.port=45558 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false",
            "envFile": "${workspaceFolder}/.envRegistry",
            "preLaunchTask": "setup-java"
        },
        {
            "type": "java",
            "name": "Run Executor",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "io.terrakube.executor.ExecutorApplication",
            "projectName": "executor",
            "args": "-Xmx512m -Xms256m",
            "vmArgs": "-Dcom.sun.management.jmxremote.port=45557 -Dcom.sun.management.jmxremote.rmi.port=45557 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false",
            "envFile": "${workspaceFolder}/.envExecutor",
            "preLaunchTask": "setup-java"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run UI",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}/ui",
            "runtimeArgs": ["start", "--force"],
            "envFile": "${workspaceFolder}/.envUi"
        }
    ],
    "compounds": [
        {
            "name": "Terrakube",
            "configurations": ["Run API", "Run Registry", "Run Executor", "Run UI"],
            "preLaunchTask": "setup-env"
        },
        {
            "name": "Terrakube Postgresql",
            "configurations": ["Run API", "Run Registry", "Run Executor", "Run UI"],
            "preLaunchTask": "setup-env2"
        },
        {
            "name": "Terrakube MSSQL",
            "configurations": ["Run API", "Run Registry", "Run Executor", "Run UI"],
            "preLaunchTask": "setup-env3"
        }
    ]
}